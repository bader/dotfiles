####################################
#             MPlayer              #
####################################
#Звук +
begin
     button = VOLUP
     prog = mplayer
     config = volume 1
     repeat = 1
end
#Звук -
begin
     button = VOLDOWN
     prog = mplayer
     config = volume -1
     repeat = 1
end
#старт\стоп воспроизведение
begin
     button = OK
     prog = mplayer
     config = pause
end
#во весь экран
begin
     button = MENU
     prog = mplayer
     config = vo_fullscreen
end

#прокрутка вперед на 10 минут
begin
     button = CHANUP
     prog = mplayer
     config = seek 600
end

#прокрутка назад на 10 минут
begin
     button = CHANDOWN
     prog = mplayer
     config = seek -600
end

#прокрутка вперед на 1 минуту
begin
     button = UP
     prog = mplayer
     config = seek 60
end

#прокрутка назад на 1 минуту
begin
     button = DOWN
     prog = mplayer
     config = seek -60
end

#прокрутка вперед на 10 секунд
begin
     button = RIGHT
     prog = mplayer
     config = seek 10
end

#прокрутка назад на 10 секунд
begin
     button = LEFT
     prog = mplayer
     config = seek -10
end

#Закрыть mplayer
begin
     button = POWER
     prog = mplayer
     config = q
end
